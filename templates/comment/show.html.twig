    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr> #}
            <tr>
                <th>Lieu</th>
                <td><a href="{{ path('room_show', {'id': comment.room.id}) }}">{{ comment.room.summary }}</a></td>
