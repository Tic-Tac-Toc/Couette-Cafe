{% extends 'base.html.twig' %}

{% block title %}Propriétaires{% endblock %}

{% block body %}
    <h1>{{ owner.familyname }} {{ owner.ffirstname }} </h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr> #}
            <tr>
                <th>Prénom</th>
                <td>{{ owner.ffirstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ owner.familyname }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ owner.address }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ owner.country }}</td>
            </tr>
        </tbody>
    </table>

    {# <a href="{{ path('owner_index') }}">back to list</a> #}


    {% if is_granted('ROLE_ADMIN') or owner == app.user.owner %}
        <a href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('owner/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
    {% endif %}
{% endblock %}
